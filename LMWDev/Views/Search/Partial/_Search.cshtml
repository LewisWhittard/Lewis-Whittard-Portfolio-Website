				</div>
			</div>
		</div>
		<div class="col-sm">
			<div class="row">
				<div class="col-sm">
					@if (Model.ProgrammingCategory == true)
					{
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="TRUE" name="Programming" id="Programming" checked>
							<label class="form-check-label" for="flexCheckChecked">
								Programming
							</label>
						</div>
					}

					else
					{
						<div class="form-check">
							<input class="form-check-input" type="checkbox" value="TRUE" name="Programming" id="Programming">

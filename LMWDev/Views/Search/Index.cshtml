@model LMWDev.Models.SearchViewModel

@{
	ViewData["Title"] = "Search";
}

<head>
	<!-- Page title shown in browser tab -->
	<title>Search</title>

	<!-- Character encoding -->
	<meta charset="UTF-8">
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">Search</h2>

        <form asp-action="Index" method="post">
            <div class="row mb-3">
                <div class="col-md-8">
                    <input asp-for="Search" class="form-control" placeholder="Search..." />
                </div>
                <div class="col-md-4">
                    <button id="SearchButton" type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category:</label>
                <select asp-for="Category" class="form-select">
                    <option value="All">All</option>
                    <option value="Software Development">Software Development</option>
                    <option value="Creative Works">Creative Works</option>
                </select>
            </div>
        </form>

        @if (Model.Results != null && Model.Results.Any())
        {
            <div class="mt-4">
                <h4>Search Results</h4>
                <ul class="list-group">
                    @foreach (var result in Model.Results)
                    {
                        <li class="list-group-item" id="SearchResult @result.ExternalId">
                            <div class="d-flex align-items-start">
                                <img src="@Url.Content("~/Images/" + result.Content.Path)" alt="@result.Content." class="img-fluid me-3" style="width:100px; height:auto; object-fit:cover;" />

                                <div>
                                    <h5 class="mb-1">@result.Title</h5>
                                    <p class="mb-1">@result.Description</p>
                                    <small class="text-muted">Category: @result.Category</small><br />
                                    <a href="@Url.Action("Index", "ClusterContent", new { Id = result.ExternalId })" id="SearchResultButton @result.ExternalId" class="btn btn-sm btn-outline-primary mt-2">
                                        View
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</body>
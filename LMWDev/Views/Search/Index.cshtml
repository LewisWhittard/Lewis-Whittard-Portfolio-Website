@model LMWDev.Models.SearchViewModel

@{
	ViewData["Title"] = "Search";
}

<head>
	<!-- Page title shown in browser tab -->
	<title>Search</title>

	<!-- Character encoding -->
	<meta charset="UTF-8">
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4">Search</h2>

        <form asp-action="Index" method="post">
            <div class="row mb-3">
                <div class="col-md-8">
                    <input asp-for="Search" class="form-control" placeholder="Search..." />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Categories:</label>
                <div class="form-check form-check-inline">
                    <input asp-for="GamesCategory" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="GamesCategory">Games</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="ProgrammingCategory" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="ProgrammingCategory">Programming</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="TestingCategory" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="TestingCategory">Testing</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="ThreeDAssetsCategory" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="ThreeDAssetsCategory">3D Assets</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="TwoDAssetCategory" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="TwoDAssetCategory">2D Assets</label>
                </div>
                <div class="form-check form-check-inline">
                    <input asp-for="BlogCategory" class="form-check-input" type="checkbox" />
                    <label class="form-check-label" asp-for="BlogCategory">Blog</label>
                </div>
            </div>
        </form>

        @if (Model.Results != null && Model.Results.Any())
        {
            <div class="mt-4">
                <h4>Search Results</h4>
                <ul class="list-group">
                    @foreach (var result in Model.Results)
                    {
                        <li class="list-group-item">
                            <div class="d-flex align-items-start">
                                <img src="@Url.Content("~/Images/" + result.Content.Path)" alt="@result.Content." class="img-fluid me-3" style="width:100px; height:auto; object-fit:cover;" />

                                <div>
                                    <h5 class="mb-1">@result.Title</h5>
                                    <p class="mb-1">@result.Description</p>
                                    <small class="text-muted">Category: @result.Category</small><br />
                                    <a href="@Url.Action("Index", "PortfolioPiece", new { Id = result.ContentID })" class="btn btn-sm btn-outline-primary mt-2">
                                        View Portfolio Piece
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</body>
@using System.Data
@using UIFactory.Factory.CSHTML.Concrete.CarouselCard;
@model CarouselCard;

<div id="@Model.GUID" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var item in Model.Cards)
        {
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/Images/@Model.Image" id="@Model.Image.GUID" name="@Model.Image.GUID" alt="@Model.Image.Alt">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <form method="get">
                        <input type="hidden" id="PostId" name="Id" value="@Model.GUID">
                        <button class="btn btn-primary" type="submit" id="@Model.Navigation" asp-action="Index" asp-controller="PortfolioPiece"> View </button>
                    </form>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


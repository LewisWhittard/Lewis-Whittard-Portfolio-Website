@model LMWDev.Models.PillarPageModel

@{
    ViewData["Title"] = Model.Page.Title;
}

@using LMWDev.Views.Components

<!-- Render ContentBody component -->
<component type="typeof(Body)"
           render-mode="ServerPrerendered"
           param-Title="Model.Page.Title"
           param-PublishDate="Model.Page.PublishDate"
           param-Blocks="Model.Page.ContentBlocks"
           param-SearchResults="Model.Results"
           param-SearchResultsHeader="@("Work in This Category:")"
           param-BackgroundEnabled="Model.BackgroundEnabled" />
@using Microsoft.AspNetCore.Components

@code {
    [Parameter]
    public Page_Library.Page.Entities.ContentBlock.HeaderBlock Block { get; set; }

    private RenderFragment RenderHeader => builder =>
    {
        var level = Block?.Level?.ToUpperInvariant() ?? "H1";
        var text = Block?.Text ?? string.Empty;

        switch (level)
        {
            case "H1":
                builder.OpenElement(0, "h1");
                break;
            case "H2":
                builder.OpenElement(0, "h2");
                break;
            case "H3":
                builder.OpenElement(0, "h3");
                break;
            case "H4":
                builder.OpenElement(0, "h4");
                break;
            case "H5":
                builder.OpenElement(0, "h5");
                break;
            case "H6":
                builder.OpenElement(0, "h6");
                break;
            default:
                builder.OpenElement(0, "h1");
                break;
        }

        builder.AddContent(1, text);
        builder.CloseElement();
    };
}

@RenderHeader


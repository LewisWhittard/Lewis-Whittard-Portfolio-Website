@using Page_Library.Page.Entities.SearchResult.Interface

<div class="list-group-item mb-4" id="SearchResult-@Result.ExternalId">
    <div class="d-flex flex-row align-items-start">

        <img src="/Images/@Result.Content.Path"
             alt="@Result.Content.Alt"
             class="img-fluid me-3"
             style="width:100px; height:auto; object-fit:cover;" />

        <div class="flex-grow-1">
            <h5 class="mb-1">@Result.Title</h5>
            <p class="mb-1">@Result.Description</p>

            <small class="text-muted">
                Category: @Result.Category
            </small>
        </div>

        @if (Result.Category == "Software Development")
        {
            <a href="/software-development/@Result.ExternalId"
               id="SearchResultButton-@Result.ExternalId"
               class="btn btn-sm btn-outline-primary ms-3">
                View
            </a>
        }
        else if (Result.Category == "Creative Works")
        {
            <a href="/creative-works/@Result.ExternalId"
               id="SearchResultButton-@Result.ExternalId"
               class="btn btn-sm btn-outline-primary ms-3">
                View
            </a>
        }
        else if (Result.Category.Contains(","))
        {
            <a href="/intersections/@Result.ExternalId"
               id="SearchResultButton-@Result.ExternalId"
               class="btn btn-sm btn-outline-primary ms-3">
                View
            </a>
        }
    </div>
</div>

@code {
    [Parameter]
    public ISearchResult Result { get; set; }
}
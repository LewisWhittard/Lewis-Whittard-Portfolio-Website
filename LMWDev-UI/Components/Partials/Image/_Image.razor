@using LMW_Infrastructure.ViewModel.Partials.Image;

@if (Image.ItemProp == null && Image.Alt == null)
{
    <img src="@Image.Value" class="centerMedia">
}
else if (Image.ItemProp != null && Image.Alt == null)
{
    <img src="@Image.Value" itemprop="@Image.ItemProp" class="centerMedia">
}
else if (Image.ItemProp == null && Image.Alt != null)
{
    <img src="@Image.Value" alt="@Image.Alt" class="centerMedia">
}
else
{
    <img src="@Image.Value" itemprop="@Image.ItemProp" alt="@Image.Alt" class="centerMedia">
}

@code {
    [Parameter]
    public Image Image { get; set; }
}
